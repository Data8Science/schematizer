<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet author="askatti" id="1468599816">
    <comment>Adding schema_meta_attribute_mapping table as per DATAPIPE-1200</comment>
    <createTable tableName="schema_meta_attribute_mapping">
      <column autoIncrement="true" name="id" type="INT(11)">
        <constraints primaryKey="true"/>
      </column>
      <column name="schema_id" type="INT(11)">
        <constraints nullable="false"/>
      </column>
      <column name="meta_attr_schema_id" type="INT(11)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="INT(11)">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="INT(11)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci"/>
    </modifySql>
  </changeSet>
  <changeSet author="askatti" id="1473453530">
    <createIndex indexName="schema_id_index" tableName="schema_meta_attribute_mapping" unique="false">
      <column name="schema_id" type="INT(11)"/>
    </createIndex>
    <createIndex indexName="unique_schema_mapping_constraint" tableName="schema_meta_attribute_mapping" unique="true">
      <column name="schema_id" type="INT(11)"/>
      <column name="meta_attr_schema_id" type="INT(11)"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="psuben" id="1446492106">
        <comment>Adding Refresh table - DATAPIPE-560</comment>
        <createTable tableName="refresh">
            <column autoIncrement="true" name="id" type="INT(11)">
                <constraints primaryKey="true"/>
            </column>
            <column name="source_id" type="INT(11)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="offset" type="INT(11)">
                <constraints nullable="false"/>
            </column>
            <column name="batch_size" type="INT(11)">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="INT(11)">
                <constraints nullable="false"/>
            </column>
            <column name="where" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="INT(11)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="INT(11)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci"/>
        </modifySql>
    </changeSet>
    <changeSet author="psuben" id="1447176876">
        <comment>[2015-11-10] Add an index on the source_id column of the refresh table.</comment>
        <createIndex indexName="source_id" tableName="refresh" unique="false">
            <column name="source_id"/>
        </createIndex>
        <comment>Changing where to filter_condition.</comment>
        <renameColumn oldColumnName="where" newColumnName="filter_condition" tableName="refresh" columnDataType="VARCHAR(255) NOT NULL"/>
        <comment>Changing status column type from string to integer.</comment>
        <modifyDataType columnName="status" newDataType="INT(11) NOT NULL" tableName="refresh"/>
    </changeSet>
    <changeSet author="psuben" id="1447180241">
        <dropNotNullConstraint columnName="filter_condition" tableName="refresh" columnDataType="VARCHAR(255)"/>
        <addDefaultValue columnName="filter_condition" tableName="refresh" defaultValue="NULL"/>
    </changeSet>
</databaseChangeLog>
<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet author="wscheng" id="1435252560">
    <comment>Adding namespace table as per DATAPIPE-211</comment>
    <createTable tableName="source">
      <column autoIncrement="true" name="id" type="INT(11)">
        <constraints primaryKey="true"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="owner_email" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="namespace_id" type="INT(11)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="INT(11)">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="INT(11)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <modifySql dbms="mysql">
      <append value=" ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci"/>
    </modifySql>
  </changeSet>

  <changeSet author="wscheng" id="1435252561">
    <comment>Adding unique constraint on source and namespace_id</comment>
    <addUniqueConstraint columnNames="name, namespace_id"
      constraintName="name_namespace_id_unique_constraint"
      tableName="source"/>
  </changeSet>
</databaseChangeLog>

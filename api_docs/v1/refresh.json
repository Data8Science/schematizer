        {
          "method": "POST",
          "summary": "Update refresh status of given table identifier.",
          "type": "RefreshInfoResponse",
          "nickname": "update_refresh_info",
          "authorizations": {},
          "parameters": [
            {
              "name": "body",
              "required": true,
              "type": "UpdateRefreshInfoRequest",
              "paramType": "body"
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid request"
            },
            {
              "code": 404,
              "message": "Reference object not found"
            },
            {
              "code": 500,
              "message": "Server side error"
            }
          ]
        }
      ]
    },
    {

          "notes": "",
          "type": "RefreshInfoResponse",
          "nickname": "create_refresh_info",
          "authorizations": {},
          "parameters": [
            {
              "name": "body",
              "required": true,
              "type": "CreateRefreshInfoRequest",
              "paramType": "body"
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid request"
            },
            {
              "code": 404,
              "message": "Reference object not found"
            },
            {
              "code": 500,
              "message": "Server side error"
            }
          ]
        }
      ]
    },
    {

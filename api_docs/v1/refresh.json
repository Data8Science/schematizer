          "nickname": "get_refresh_info_by_table",
          "authorizations": {},
          "parameters": [
            {
              "name": "table_identifier",
              "required": true,
              "type": "string",
              "paramType": "path",
              "allowMultiple": false
            }
          ],
          "responseMessages": [
            {
              "code": 400,
              "message": "Invalid table identifier supplied"

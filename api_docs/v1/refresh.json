      "id": "CreateRefreshInfoRequest",
      "required": [
        "table_identifier",
        "refresh_status"
      ],
      "properties": {
        "table_identifier": {
          "type": "string",
          "description": "Unique string representing a cluster and table combination."
        },
        "refresh_status": {
          "type": "integer",
          "description": "Status of last full refresh."
        }
      }
    },
    "UpdateRefreshInfoRequest": {
      "id": "UpdateRefreshInfoRequest",
      "required": [
        "refresh_status"
      ],
      "properties": {
        "refresh_status": {
          "type": "integer",
          "description": "Status of last full refresh."
        }
      }
    },
    "RefreshInfoResponse": {
      "id": "RefreshInfoResponse",
      "properties": {
        "id": {
          "type": "integer",
          "description": "The id of the refresh info."
        },
        "table_identifier": {
          "type": "string",
          "description": "Unique string representing a cluster and table combination."
        },
        "refresh_status": {
          "type": "integer",
          "description": "Status of last full refresh."
        },
        "last_refreshed_at": {
          "type": "string",
          "format": "date-time",
          "description": "Last time this table is refreshed."

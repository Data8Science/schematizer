{
    "apiVersion": "1.0.0",
    "swaggerVersion": "1.2",
    "basePath": "http://169.254.255.254:20912",
    "resourcePath": "/v1/topics",
    "produces": [
        "application/json"
    ],
    "consumes": [
        "application/json"
    ],
    "apis": [
        {
            "path": "/v1/topics/{topic_name}",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get topic by topic name",
                    "type": "Topic",
                    "nickname": "get_topic_by_topic_name",
                    "authorizations": {},
                    "parameters": [
                        {
                            "name": "topic_name",
                            "description": "Kafka topic name that needs to be fetched",
                            "required": true,
                            "type": "string",
                            "paramType": "path",
                            "allowMultiple": false
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Invalid topic_name supplied"
                        },
                        {
                            "code": 404,
                            "message": "Topic not found"
                        },
                        {
                            "code": 500,
                            "message": "Server side error"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/v1/topics/{topic_name}/schemas",
            "operations": [
                {
                    "method": "GET",
                    "summary": "List all schemas by topic name",
                    "type": "array",
                    "items": {
                        "$ref": "Schema"
                    },
                    "nickname": "list_schemas_by_topic_name",
                    "authorizations": {},
                    "parameters": [
                        {
                            "name": "topic_name",
                            "description": "Kafka topic name that we use to fetch schemas. Compatible schemas are associated with one Kafka topic.",
                            "required": true,
                            "type": "string",
                            "paramType": "path",
                            "allowMultiple": false
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Invalid topic_name supplied"
                        },
                        {
                            "code": 404,
                            "message": "Topic not found"
                        },
                        {
                            "code": 500,
                            "message": "Server side error"
                        }
                    ]
                }
            ]
        },
        {
            "path": "/v1/topics/{topic_name}/schemas/latest",
            "operations": [
                {
                    "method": "GET",
                    "summary": "Get latest schema by topic name",
                    "type": "Schema",
                    "nickname": "get_latest_schema_by_topic_name",
                    "authorizations": {},
                    "parameters": [
                        {
                            "name": "topic_name",
                            "description": "This is the Kafka topic name from which we would like to fetch the latest Avro schema. Compatible schemas are associated with one Kafka topic.",
                            "required": true,
                            "type": "string",
                            "paramType": "path",
                            "allowMultiple": false
                        }
                    ],
                    "responseMessages": [
                        {
                            "code": 400,
                            "message": "Invalid topic_name supplied"
                        },
                        {
                            "code": 404,
                            "message": "Topic not found"
                        },
                        {
                            "code": 404,
                            "message": "Latest schema is not found"
                        },
                        {
                            "code": 500,
                            "message": "Server side error"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "Source": {
            "id": "Source",
            "properties": {
                "source_id": {
                    "type": "integer",
                    "description": "Source ID"
                },
                "namespace": {
                    "type": "string",
                    "description": "Namespace of the source, such as yelpmain.db, etc"
                },
                "source": {
                    "type": "string",
                    "description": "Source of the Avro schema, such as table User, or log service.foo etc"
                },
                "source_owner_email": {
                    "type": "string",
                    "description": "Email address of the source owner"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the entry is created"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the entry is last updated"
                }
            }
        },
        "Topic": {
            "id": "Topic",
            "properties": {
                "topic_id": {
                    "type": "integer",
                    "description": "Topic ID"
                },
                "topic": {
                    "type": "string",
                    "description": "The Kafka topic name."
                },
                "source": {
                    "$ref": "Source",
                    "description": "Source of the Avro schema."
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the entry is created"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the entry is last updated"
                }
            }
        },
        "Schema": {
            "id": "Schema",
            "properties": {
                "schema_id": {
                    "type": "integer",
                    "description": "System automatically generated id. It is unique for each registered schema"
                },
                "schema": {
                    "type": "string",
                    "description": "This is the json formatted avro schema."
                },
                "topic": {
                    "$ref": "Topic",
                    "description": "Topic object of the schema."
                },
                "base_schema_id": {
                    "type": "integer",
                    "description": "This is the original schema which the transformer uses to apply transformation on."
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "RW",
                        "R",
                        "Disabled"
                    ],
                    "description": "Schema status: RW (read/write), R (read-only), Disabled"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the entry is created"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the entry is last updated"
                }
            }
        }
    }
}
